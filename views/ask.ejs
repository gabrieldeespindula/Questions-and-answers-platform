<%- include("partials/header.ejs"); %>
<body>

    <%- include("partials/navbar.ejs"); %>
      
    <div class="container mt-5">  
        <div class="card">
            <div class="card-header">
                <h3 class="text-center mt-3">Ask a question</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/saveAsk">
                    <div class="form-group mb-4">
                        <label for="title">Title</label>
                        <input name="title" class="form-control" id="title" placeholder="Question title" type="text">
                    </div>
                    <div class="form-group mb-4">
                        <label for="description">Description</label>
                        <textarea name="description" class="form-control" placeholder="Describe your question here" name="description" id="description" cols="30" rows="5"></textarea>
                    </div>
                    <div class="form-group mb-4 d-flex justify-content-center">
                        <button class="btn btn-primary">Ask</button>
                    </div>
                </form>
            </div>
        </div>          
    </div>
    
</body>
<%- include("partials/footer.ejs"); %>