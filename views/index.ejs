<%- include("partials/header.ejs"); %>
<body>

    <%- include("partials/navbar.ejs"); %>
      
    <div class="container">

        <div class="d-flex justify-content-center my-3">
            <h2>Questions</h2>
        </div>

        <div class="d-flex justify-content-center my-3">
            <a href="/ask" class="btn btn-primary">Ask</a>
        </div>

        <% questions.forEach(question => { %>
            
            <div class="card">
                <div class="card-header">
                    <small><%= (question.createdAt.getMonth() + 1) < 10 ? "0" + (question.createdAt.getMonth() + 1) : (question.createdAt.getMonth() + 1) %>/<%= question.createdAt.getDate() < 10 ? "0" + question.createdAt.getDate() : question.createdAt.getDate() %>/<%= question.createdAt.getFullYear() %></small>
                </div>
                <div class="card-body">
                    <h4><%= question.title %></h4>
                </div>
                <div class="card-footer">
                    <a href="/question/<%= question.id %>" class="btn btn-primary">Answer</a>
                </div>
            </div>

        <% }) %>

    </div>
    
</body>
<%- include("partials/footer.ejs"); %>
